{
  "name": "evergreen-ui",
  "repository": "https://github.com/evergreen-ci/ui",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "prepare": "husky",
    "storybook": "pnpm --filter spruce --filter parsley --filter @evg-ui/lib --filter @evg-ui/fungi --parallel run storybook --no-open & sleep 5 && storybook dev",
    "test": "vitest --typecheck=false --exclude=./**/snapshot.test.ts"
  },
  "devDependencies": {
    "@evg-ui/storybook-addon": "workspace:*",
    "@storybook/react-vite": "^9.0.18",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "storybook": "^9.0.18",
    "vitest": "^3.2.4"
  }
}
