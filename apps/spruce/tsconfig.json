{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@evg-ui/lib/*": ["../../../packages/lib/src/*"]
    },
  },
  "exclude": [
    "node_modules",
    "vite.config.ts"
  ],
  "include": [
    "src",
    "scripts",
    "test_utils/index.tsx",
    "test_utils/custom-queries.ts",
    "config/vitest/setupTests.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
